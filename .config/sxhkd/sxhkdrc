# Audio Control keys
XF86AudioMute
    pamixer -t; dunstify -r 2593 -u low -t 500 "Volume $(pamixer --get-volume-human)"

XF86AudioRaiseVolume
    pamixer -i 5; dunstify -r 2593 -u low -t 500 "Volume $(pamixer --get-volume-human)"

XF86AudioLowerVolume
    pamixer -d 5; dunstify -r 2593 -u low -t 500 "Volume $(pamixer --get-volume-human)"

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness Control keys
XF86MonBrightness{Up,Down}
    brightnessctl -q set {+5%,5%-}; brightnessnotify

# Media Control keys
XF86AudioPlay
    playerctl play-pause

XF86Audio{Prev,Next}
    playerctl {previous,next}

# Application shortcuts
super + F1
    $TERMINAL -e spt

super + F2
    firefox

super + F3
    $TERMINAL -e $FILEMANAGER

super + F6
    signal-desktop

super + F7
    $TERMINAL -e neomutt

super + shift + F7
    mailsync

super + F8
    telegram-desktop

super + F9
    discord

XF86ScreenSaver
    slock

Print
    screenshot

control + Print
    screenshot2imgur

super + dead_acute
    dmenuunicode

XF86Display
    displayselect

XF86Launch1
    exitmenu

super + shift + e
    editconf

super + control + c
    showclip

super + control + {_, shift} + m
    {dmenumount, dmenuumount}

super + shift + p
    passmenu

super + control + p
    $TERMINAL -e pulsemixer

super + {_, shift} + n
    {snoozedunst -u, snoozedunst -p}

super + control + n
    $TERMINAL -e newsboat

super + y
    playyoutube

super + shift + y
    deleteyoutube

super + control + y
    downloadyoutube

super + shift + h
    $TERMINAL -e htop

super + shift + k
    $TERMINAL -e khal interactive
