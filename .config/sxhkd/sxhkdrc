# Audio Control keys
XF86AudioMute
    pulsemixer --toggle-mute; volumenotify

XF86Audio{Raise,Lower}Volume
    pulsemixer --change-volume {+5,-5}; volumenotify

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle
    # pulsemixer --toggle-mute --id $(pulsemixer --list-sources \
    #     | grep Default | cut -d ' ' -f3 | tr -d ',')

# Brightness Control keys
XF86MonBrightness{Up,Down}
    light {-A,-U} 5; dunstify -r 2594 -u low -t 500 "Brightness $(light -G | cut -d '.' -f1)%"
    # brightnessctl -q set {+5%,5%-}; brightnessnotify

# Media Control keys
XF86AudioPlay
    playerctl play-pause

XF86Audio{Prev,Next}
    playerctl {previous,next}

# Application shortcuts
super + F1
    $TERMINAL -e joplin

super + shift + F1
    joplin-desktop

super + F2
    firefox

super + shift + F2
    firefox --private-window

super + F3
    $TERMINAL -e $HOME/.config/vifm/scripts/vifmrun

super + F4
    $TERMINAL -e khal interactive

super + F5
    slack

super + F6
    signal-desktop --use-tray-icon

super + F7
    $TERMINAL -e neomutt

super + shift + F7
    mailsync

super + F8
    telegram-desktop

super + F9
    discord

super + F10
    $TERMINAL -e ncspot

super + shift + F10
    $TERMINAL -e lyrics ncspot

super + F11
    networkmanager_dmenu

super + F12
    $TERMINAL -e htop

super + shift + F12
    $TERMINAL -e glances

XF86ScreenSaver
    slock

super + shift + asterisk
    sxiv -art $HOME/Pictures

super + numbersign
    = -- -i

Print
    screenshot

super + Print
    screenshot -s

control + Print
    screenshot -i

shift + Print
    screenshot -o $HOME/Pictures

super + control + Print
    screenshot -si

super + shift + Print
    screenshot -so $HOME/Pictures

super + control + shift + Print
    screenshot -sio $HOME/Pictures

control + shift + Print
    screenshot -io $HOME/Pictures

super + dead_acute
    dmenuunicode

XF86Display
    displayselect

control + XF86Display
    $HOME/.screenlayout/fixed.sh

control + shift + XF86Display
    $HOME/.screenlayout/external.sh

XF86Launch1
    exitmenu

super + shift + e
    editconf

super + control + c
    showclip

super + control + {_, shift} + m
    {dmenumount, dmenuumount}

super + shift + p
    passmenu

super + control + p
    $TERMINAL -e pulsemixer

super + {_, shift} + n
    {snoozedunst -u, snoozedunst -p}

super + control + n
    $TERMINAL -e newsboat

super + y
    playyoutube

super + shift + y
    deleteyoutube

super + control + y
    downloadyoutube

super + control + Escape
    xkill
