#!/usr/bin/env sh

chosen=$(printf "shutdown\nlogout\nsuspend\nreboot" | dmenu -i -p "Choose which action to take: ")

case $chosen in
    "shutdown" )
        shutdown now;;
    "logout" )
        pkill -KILL -u "${USER}";;
    "reboot" )
        reboot;;
    "suspend" )
        systemctl suspend;;
esac
