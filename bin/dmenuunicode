#!/usr/bin/env sh

# The famous "get a menu of emojis to copy" script.

chosen=$(grep -v "#" ~/.local/share/larbs/emoji | dmenu -i -l 20 -fn "Hack Nerd Font Mono:pixelsize=40:antialias=true:autohint=true") #-fn Monospace-18) | "Twitter Color Emoji"

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$c" | tr -d '\n' | xclip -selection clipboard
notify-send "'$c' copied to clipboard." &

s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
echo "$s" | tr -d '\n' | xclip
notify-send "'$s' copied to primary." &
