#!/usr/bin/env bash

config_files=".zshrc\n
.profile\n
.xinitrc\n
.config/vifm/vifmrc\n
.config/nvim/init.vim\n
.config/sxhkd/sxhkdrc\n
.config/dunst/dunstrc\n
.config/spotifyd/spotifyd.conf"

chosen=$(echo -e $config_files | dmenu -i -p "Edit:") || exit

path=$(echo "$HOME/$chosen" | tr -d '[:space:]')

$TERMINAL -e $EDITOR $path
